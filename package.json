{
  "name": "mangata-e2e-tests",
  "version": "1.0.0",
  "description": "sets asset info for assets bridged from ethereum to mangata",
  "main": "index.ts",
  "author": "Gleb Urvanov",
  "license": "GPLv3",
  "private": true,
  "dependencies": {
    "@types/bn.js": "^4.11.6",
    "@types/bs58": "^4.0.1",
    "@types/jsonpath": "^0.2.0",
    "@types/node": "^14.14.10",
    "@types/selenium-webdriver": "3.0.19",
    "@types/tiny-async-pool": "^1.0.0",
    "@types/uuid": "^8.3.0",
    "@types/web3": "^1.2.2",
    "bn.js": "^5.1.3",
    "bs58": "^4.0.1",
    "chromedriver": "96",
    "dotenv": "^8.2.0",
    "eslint": "7.26.0",
    "ethers": "^5.4.7",
    "ganache-cli": "^6.12.2",
    "jsonpath": "^1.1.1",
    "loadsh": "^0.0.4",
    "mangata-sdk": "^0.12.0",
    "package.json": "^2.0.1",
    "prettier": "2.3.0",
    "selenium-webdriver": "3.6.0",
    "tiny-async-pool": "^1.2.0",
    "truffle": "^5.4.7",
    "truffle-hdwallet-provider": "^1.0.17",
    "ts-node": "^10.4.0",
    "typescript": "4.5.4",
    "web3": "^1.5.3",
    "winston": "^3.3.3",
    "yarn": "^1.22.10"
  },
  "scripts": {
    "postinstall": "husky install ;  yarn config set enableTelemetry 0 ;",
    "start": "ts-node --project tsconfig.json index.ts",
    "start-prod": "node ./build/index.js",
    "build": "tsc --project tsconfig.json",
    "test": "jest",
    "test-parallel": "rm nonce.db ; rm sudo.lock; jest --verbose --ci --group=parallel",
    "test-playground-pararell": "rm nonce.db ; rm sudo.lock; jest test/exploratory/parallelTesting/transfer/* --verbose",
    "test-cluster": "rm nonce.db; rm sudo.lock; jest --verbose --group=cluster",
    "test-cluster-healthcheck": "rm nonce.db; rm sudo.lock; jest --verbose --group=cluster-healthcheck",
    "test-sequential": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --group=sequential",
    "test-sequential-e2e": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=critical ",
    "test-sequential-accuracy": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=accuracy ",
    "test-ci": "rm nonce.db ; rm sudo.lock; jest --runInBand --verbose --ci --group=ci ",
    "test-ui": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=ui ",
    "test-sdk": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=sdk ",
    "test-ui-smoke": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=ui-smoke ",
    "test-governance": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=governance",
    "test-governance-candidacy": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=governance-candidacy",
    "test-governance-voting": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=governance-voting",

    "tsc-lint": "tsc  --project tsconfig.json --noEmit",
    "eslint": "node_modules/.bin/eslint --max-warnings 0 . --ext .ts"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.173",
    "babel-jest": "^26.6.3",
    "eslint-config-mangata": "https://github.com/mangata-finance/eslint-config-mangata",
    "husky": "^7.0.2",
    "jest": "^26.6.3",
    "jest-allure": "^0.1.3",
    "jest-html-reporters": "^2.1.6",
    "jest-junit": "^12.2.0",
    "jest-runner-groups": "^2.1.0",
    "lodash": "^4.17.21",
    "mangata-node": "https://github.com/mangata-finance/mangata-node"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@polkadot|@babel/runtime/helpers/esm/)"
    ],
    "runner": "groups",
    "verbose": true,
    "bail": false,
    "setupFilesAfterEnv": [
      "jest-allure/dist/setup",
      "./utils/setupJest.ts"
    ],
    "reporters": [
      "default",
      "jest-allure",
      "jest-junit",
      [
        "jest-html-reporters",
        {
          "publicPath": "reports/html-report",
          "filename": "report.html",
          "expand": true,
          "openReport": false
        }
      ]
    ]
  }
}
