{
  "name": "mangata-e2e-tests",
  "version": "1.0.0",
  "description": "sets asset info for assets bridged from ethereum to mangata",
  "main": "index.ts",
  "author": "Gleb Urvanov",
  "license": "GPLv3",
  "private": true,
  "dependencies": {
    "@polkadot/api": "^2.10.1",
    "@types/bn.js": "^4.11.6",
    "@types/node": "^14.14.10",
    "@types/selenium-webdriver": "3.0.19",
    "@types/uuid": "^8.3.0",
    "@types/web3": "^1.2.2",
    "bn.js": "^5.1.3",
    "chromedriver": "^92.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.26.0",
    "package.json": "^2.0.1",
    "prettier": "^2.3.2",
    "selenium-webdriver": "3.6.0",
    "typescript": "3",
    "web3": "^1.3.0",
    "winston": "^3.3.3",
    "xoshiro": "^2.0.3",
    "yarn": "^1.22.10"
  },
  "scripts": {
    "start": "ts-node --project tsconfig.json index.ts",
    "start-prod": "node ./build/index.js",
    "build": "tsc --project tsconfig.json",
    "test": "jest",
    "test-parallel": "rm nonce.db ; rm sudo.lock; jest test/parallel/* --verbose --ci",
    "test-playground-pararell": "rm nonce.db ; rm sudo.lock; jest test/exploratory/parallelTesting/transfer/* --verbose",
    "test-sequential": "rm nonce.db ; rm sudo.lock; jest test/sequential/* --verbose --runInBand",
    "test-sequential-e2e": "rm nonce.db ; rm sudo.lock; jest test/sequential/* --verbose --runInBand --ci ",
    "test-ci": "rm nonce.db ; rm sudo.lock; jest test/ci/* test/ui/* --runInBand --verbose --ci ",
    "test-ui": "rm nonce.db ; rm sudo.lock; jest test/ui/* --verbose --runInBand --ci ",
    "tsc-lint": "tsc -noemit -p tsconfig.json",
    "eslint": "node_modules/.bin/eslint --max-warnings 0 . --ext .ts",
    "xoshiro": "^2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.23",
    "babel-jest": "^26.6.3",
    "eslint-config-mangata": "https://github.com/mangata-finance/eslint-config-mangata.git",
    "jest": "^26.6.3",
    "jest-allure": "^0.1.3",
    "jest-html-reporters": "^2.1.6",
    "jest-junit": "^12.2.0"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "jest": {
    "verbose": true,
    "bail": false,
    "setupFilesAfterEnv": [
      "jest-allure/dist/setup",
      "./utils/setupJest.ts"
    ],
    "reporters": [
      "default",
      "jest-allure",
      "jest-junit",
      [
        "jest-html-reporters",
        {
          "publicPath": "reports/html-report",
          "filename": "report.html",
          "expand": true,
          "openReport": false
        }
      ]
    ]
  }
}
