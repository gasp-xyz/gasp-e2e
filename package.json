{
  "name": "mangata-e2e-tests",
  "version": "1.0.0",
  "description": "sets asset info for assets bridged from ethereum to mangata",
  "main": "index.ts",
  "author": "Gleb Urvanov",
  "license": "GPLv3",
  "private": true,
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.17.8",
    "@commitlint/config-conventional": "^17.4.2",
    "@mangata-finance/sdk": "1.16.1",
    "@types/bs58": "^4.0.1",
    "@types/jsonpath": "^0.2.0",
    "@types/node": "^14.14.10",
    "@types/selenium-webdriver": "3.0.19",
    "@types/tiny-async-pool": "^1.0.0",
    "@types/uuid": "^8.3.0",
    "@types/web3": "^1.2.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "bs58": "^4.0.1",
    "commitlint": "^17.4.2",
    "chromedriver": "^110.0.0",
    "dotenv": "^16.0.1",
    "eslint": "7.26.0",
    "ethers": "^5.4.7",
    "ganache-cli": "^6.12.2",
    "guid-typescript": "^1.0.9",
    "jest-extended": "^3.2.3",
    "jsonpath": "^1.1.1",
    "loadsh": "^0.0.4",
    "node-ipc": "^11.1.0",
    "package.json": "^2.0.1",
    "prettier": "2.3.0",
    "selenium-webdriver": "3.6.0",
    "tiny-async-pool": "^1.2.0",
    "truffle": "^5.4.7",
    "truffle-hdwallet-provider": "^1.0.17",
    "ts-node": "^10.4.0",
    "typescript": "4.5.4",
    "web3": "^1.5.3",
    "webpack-babel-jest": "^1.0.4",
    "winston": "^3.3.3",
    "yarn": "^1.22.10"
  },
  "scripts": {
    "postinstall": "husky install ;  yarn config set enableTelemetry 0 ;",
    "start": "ts-node --project tsconfig.json index.ts",
    "start-prod": "node ./build/index.js",
    "build": "tsc --project tsconfig.json",
    "init-test": "rm nonce.db; rm sudo.lock;",
    "test": "jest",
    "test-parallel": "export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report-parallel;rm nonce.db ; rm sudo.lock; jest --verbose --ci --group=parallel --forceExit ",
    "test-mat": "export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report-parallel;rm nonce.db ; rm sudo.lock; jest --verbose --ci --group=parallel test/parallel/xyk-pallet.API.sellAsset.test.ts --forceExit ",
    "test-parallel-files": "export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report-parallel;rm nonce.db ; rm sudo.lock; jest --verbose --ci  --forceExit ",
    "test-playground-parallel": "rm nonce.db ; rm sudo.lock; jest test/exploratory/parallelTesting/transfer/* --verbose --forceExit ",
    "test-cluster": "rm nonce.db; rm sudo.lock; jest --verbose --group=cluster --forceExit ",
    "test-cluster-healthcheck": "rm nonce.db; rm sudo.lock; jest --verbose --group=cluster-healthcheck --forceExit ",
    "test-sequential": "export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report-seq; rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --group=sequential --forceExit ",
    "test-seqgasless": "export GASLESS=true; export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report-seq; rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --group=seqgasless --forceExit ",
    "test-paralgasless": "export GASLESS=true; export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report-parallel; rm nonce.db; rm sudo.lock; jest --verbose --ci --group=paralgasless --forceExit ",
    "test-sequential-no-bootstrap": "export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report-seq; rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --group=sequential --group=-bootstrap --group=-rewards-bootstrap --forceExit ",
    "test-sequential-autocompound": "export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report-seq; rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --group=autocompound --forceExit ",
    "test-sequential-e2e": "export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report-seq-e2e; rm nonce.db; rm sudo.lock; jest --verbose --runInBand --ci --group=critical  --forceExit ",
    "test-sequential-accuracy": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=accuracy  --forceExit ",
    "test-sequential-files": "export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report-seq-e2e; rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci  --forceExit ",
    "test-bootstrap": "export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report-seq; rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --group=bootstrap --group=-bootstrap-rewards --forceExit ",
    "test-rewards-bootstrap": "export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report-seq; rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --group=rewards-bootstrap --forceExit ",
    "test-ci": "rm nonce.db ; rm sudo.lock; jest --runInBand --verbose --ci --group=ci  --forceExit ",
    "test-temp-ci": "rm nonce.db ; rm sudo.lock; jest --runInBand --verbose --ci --group=temp-ci  --forceExit ",
    "test-ui": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=ui  --forceExit ",
    "test-microapps-ui": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=microappsUI ",
    "test-setup": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=setup  --forceExit ",
    "test-sdk": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=sdk  --forceExit ",
    "test-ui-smoke": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=ui-smoke  --forceExit ",
    "test-governance": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=governance --forceExit ",
    "test-governance-candidacy": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=governance-candidacy --forceExit ",
    "test-governance-voting": "rm nonce.db ; rm sudo.lock; jest --verbose --runInBand --ci --group=governance-voting --forceExit ",
    "tsc-lint": "tsc  --project tsconfig.json --noEmit",
    "eslint": "node_modules/.bin/eslint --max-warnings 0 . --ext .ts",
    "reports": "allure generate reports",
    "test-github": "export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report;  rm nonce.db ; rm sudo.lock; jest --verbose  --ci --forceExit",
    "test-multiswap": "export GASLESS=true; export JEST_HTML_REPORTERS_PUBLIC_PATH=reports/html-report-parallel;rm nonce.db ; rm sudo.lock; jest --verbose --ci --group=multiswap --forceExit"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.173",
    "allure-commandline": "^2.18.1",
    "babel-jest": "^27.5.1",
    "eslint-config-mangata": "https://github.com/mangata-finance/eslint-config-mangata.git",
    "husky": "^7.0.2",
    "jest": "29.4",
    "jest-allure": "^0.1.3",
    "jest-html-reporters": "^2.1.6",
    "jest-junit": "^12.2.0",
    "jest-runner-groups": "^2.1.0",
    "lodash": "^4.17.21"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "true",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@polkadot|@babel/runtime/helpers/esm/)"
    ],
    "runner": "groups",
    "verbose": true,
    "bail": false,
    "forceExit": true,
    "globalSetup": "./utils/globalSetup.js",
    "globalTeardown": "./utils/globalTeardown.js",
    "setupFiles": [
      "./utils/setupTests.ts"
    ],
    "setupFilesAfterEnv": [
      "./utils/setupJest.ts"
    ],
    "testTimeout": 1500000,
    "reporters": [
      "default",
      "jest-junit",
      [
        "jest-html-reporters",
        {
          "publicPath": "reports/html-report",
          "filename": "report.html",
          "expand": true,
          "openReport": false
        }
      ]
    ]
  }
}
