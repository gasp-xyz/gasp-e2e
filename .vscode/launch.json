    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "-i"
            ],
            "preLaunchTask": "npm run build",
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceRoot}/**/*"
            ],
            "envFile": "${workspaceRoot}/.env"
        },
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "args": ["${relativeFile}" , "testCaseName=transfer",  "threadNumber=2", "duration=1000", "totalTransactions=2", "nodes=wss://integration.mangatafinance.cloud:9944," ],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "env": {
                "TEST_SUDO_NAME": "",
                "PERF_TEST" : "true"
              }
        }
        
    ]
}